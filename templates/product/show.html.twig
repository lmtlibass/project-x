{% extends "base.html.twig" %}

{% block header %}         
    {% include "shared/_navbar.html.twig" %}
{% endblock %}

{% block body %}
    <div class="text-black font-bold my-8" aria-label="Breadcrumb">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a href="{{ path('home') }}">Accueil</a>
                <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"/></svg>
            </li>
            <li class="flex items-center">
                <a href="{{ path('product_category', { 'slug': product.slug }) }}">{{ product.category.name }}</a>
                <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"/></svg>
            </li>
            <li>
                <a href="{{ path('product_show', { 'category_slug': product.category.slug, 'slug': product.slug  } ) }}" class="text-gray-500" aria-current="page">{{ product.name }}</a>
            </li>
        </ol>
    </div>
   <!-- component -->
       <div class="bg-white shadow-md mx-auto rounded-xl flex flex-col justify-around items-center overflow-hidden sm:flex-row sm:h-4/5 sm:w-3/5 md:w-4/5">
            <img class="h-1/2 w-full sm:h-full sm:w-1/2 object-cover" src="{{ product.mainPicture }}" alt="image"/>
            <div class="flex-1 w-full flex ml-3 flex-col items-baseline justify-around h-4/5 pl-3 sm:h-full sm:items-baseline sm:w-4/5">
                <div class="flex flex-col justify-start items-baseline">
                    <h1 class="text-lg font-normal mb-4 text-gray-600 font-sans">
                        {{ product.name }}
                    </h1>
                    <span class="text-xl text-yellow-400 mt-0">{{ product.category.name }}</span>
                </div>
                <p class="text-lg text-gray-500 w-4/5">
                    {{ product.shortDescription }}
                </p>
                <div class="w-full flex justify-between items-center">
                    <h1 class="font-bold text-gray-500">{{ product.price }} CFA</h1>
                    <button class="bg-yellow-400 mr-5 mt-60 text-white px-4 flex py-1 rounded-sm shadow-md">
                            <svg class="flex-1 h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.70711 15.2929C4.07714 15.9229 4.52331 17 5.41421 17H17M17 17C15.8954 17 15 17.8954 15 19C15 20.1046 15.8954 21 17 21C18.1046 21 19 20.1046 19 19C19 17.8954 18.1046 17 17 17ZM9 19C9 20.1046 8.10457 21 7 21C5.89543 21 5 20.1046 5 19C5 17.8954 5.89543 17 7 17C8.10457 17 9 17.8954 9 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            Ajouter au panier
                    </button>
                </div
            </div>
        </div>
{% endblock %}

